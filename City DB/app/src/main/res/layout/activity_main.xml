<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button android:id="@+id/buttonLook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOOKUP CITIES"
            android:onClick="onLookup"/>

        <Button android:id="@+id/buttonAddCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD CITY"
            android:onClick="onAddCity"/>

        <Button android:id="@+id/buttonReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET DATABASE"
            android:onClick="onResetTable"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>